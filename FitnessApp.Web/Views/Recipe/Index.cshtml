                        {
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-info me-2 w-50">Details</a>
                            <form asp-controller="Product" asp-action="AddToCart" method="post" class="w-50">
                                <input type="hidden" name="id" value="@recipe.Id" />
                                <button type="submit" class="btn btn-success w-100">Buy</button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-info w-100">Details</a>
                        }
                    </div> *@
                </div>
            </div>
        </div>
    }
</div>