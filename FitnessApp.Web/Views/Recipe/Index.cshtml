@using System.Security.Claims
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<FitnessApp.ViewModels.RecipesIndexView>
@{
    ViewData["Title"] = "Recipes List";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    @if (User?.Identity?.IsAuthenticated==true)
    {
        <a asp-controller="Recipe" asp-action="Add" class="btn btn-primary"><i class="fas fa-plus"></i>Write a Recipe</a>
    }
</div>
<hr />

<div class="row text-center">
	@foreach (var recipe in Model)
	{
		<div class="col-md-3 mb-4">
			<div class="card h-100" style="width: 100%;">
				@if (!string.IsNullOrEmpty(recipe.ImageUrl))
				{
					<img src="@recipe.ImageUrl" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="@recipe.Name">
				}
				else
				{
					<img src="~/images/NoPictureAvailable.png" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="No Image Available">
				}

				<div class="card-body d-flex flex-column">
					<h5 class="card-title">@recipe.Name</h5>
                
					<div class="mt-auto d-flex justify-content-between gap-2">
						@if (recipe.UserID == User!.FindFirstValue(ClaimTypes.NameIdentifier))
						{
							<a asp-controller="Recipe" asp-action="Edit" asp-route-id="@recipe.Id" class="btn btn-info flex-fill">Edit</a>

							<form asp-controller="Recipe" asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this recipe?');" style="display:inline;">
								<input type="hidden" name="id" value="@recipe.Id" />
								<button type="submit" class="btn btn-danger flex-fill">Delete</button>
							</form>

						}
						<a asp-controller="Recipe" asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-info flex-fill">Details</a>
							<form asp-controller="Recipe" asp-action="AddToDiet" method="get" style="display:inline;">
								<input type="hidden" name="recipeId" value="@recipe.Id" />
								<button type="submit" class="btn btn-success flex-fill">Add to Diet</button>
							</form>
					</div>
				</div>
			</div>
		</div>
	}


</div>