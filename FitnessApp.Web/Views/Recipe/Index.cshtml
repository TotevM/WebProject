@using System.Security.Claims
@using FitnessApp.ViewModels.RecipeModels
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<RecipesIndexView>
@{
    ViewData["Title"] = "Recipes List";
}

<div class="recipe-page-container">
    <!-- Header Section -->
    <div class="page-header">
        <h1>Available Recipes</h1>
        @if (User?.Identity?.IsAuthenticated == true)
        {
            <div class="action-buttons">
                <a asp-controller="Recipe" asp-action="Add" class="btn btn-primary btn-add-recipe">
                    Write a Recipe
                </a>
            </div>
        }
    </div>

    <!-- Filter Bar -->
    <div class="filter-bar">
        <div class="search-container">
            <i class="fas fa-search search-icon"></i>
            <input type="text"
                   id="recipeSearch"
                   class="search-input"
                   placeholder="Search recipe by name...">
        </div>

        <div class="filter-groups">
            <button class="clear-filters-btn">
                Clear Filters
            </button>
        </div>
    </div>

    <div class="recipe-grid" id="recipeGrid">
        @foreach (var recipe in Model)
        {
            <div class="recipe-item">
                <div class="card recipe-card">
                    <div class="card-img-container">
                        @if (!string.IsNullOrEmpty(recipe.ImageUrl))
                        {
                            <img src="@recipe.ImageUrl" class="card-img-top" alt="@recipe.Name">
                        }
                        else
                        {
                            <img src="~/images/NoPictureAvailable.png" class="card-img-top" alt="No Image Available">
                        }
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">@recipe.Name</h3>
                        <div class="card-buttons">
                            <a asp-controller="Recipe" asp-action="Details" asp-route-id="@recipe.Id" class="card-btn details">Details</a>
                            <form asp-controller="Diet" asp-action="AddRecipeToDiet" method="get" class="card-btn-form">
                                <input type="hidden" name="recipeId" value="@recipe.Id" />
                                <button type="submit" class="card-btn add-to-diet">Add to Diet</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/recipe.css" />
}

@section Scripts {
    <script src="~/js/recipe.js" asp-append-version="true"></script>
}