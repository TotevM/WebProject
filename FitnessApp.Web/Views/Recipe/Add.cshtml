@using FitnessApp.Data.Models.Enumerations;
@model AddRecipeView
@{
    ViewData["Title"] = "Add Recipe";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.RecipeName" class="form-label-add-edit">Recipe Name</label>
                    <input asp-for="@Model.RecipeName" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.RecipeName" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-2">
	            <label asp-for="@Model.Preparation" class="form-label-add-edit">Preparation</label>
	            <textarea asp-for="@Model.Preparation" class="form-control" aria-required="true" rows="2"></textarea>
	            <span asp-validation-for="@Model.Preparation" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <label asp-for="@Model.Ingredients" class="form-label-add-edit">Ingredients</label>
	            <textarea asp-for="@Model.Ingredients" class="form-control" aria-required="true" rows="2"></textarea>
                <span asp-validation-for="@Model.Ingredients" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label asp-for="@Model.ImageUrl" class="form-label-add-edit">ImageURL</label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="false" placeholder="Enter image URL (optional)" />
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>

            <div class="row">

	            <div class="col-sm-6 mb-2">
		            <label asp-for="@Model.Goal" class="form-label-add-edit">Select Category</label>
		            <select asp-for="@Model.Goal" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.Goals))">
			            <option value="">Select Category...</option>
		            </select>
		            <span asp-validation-for="@Model.Goal" class="text-danger"></span>
	            </div>
	            <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.Calories" class="form-label-add-edit">Calories:</label>
		            <input asp-for="@Model.Calories" class="form-control" aria-required="true" />
		            <span asp-validation-for="@Model.Calories" class="text-danger"></span>
	            </div>
	            <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.Protein" class="form-label-add-edit">Protein:</label>
                    <input asp-for="@Model.Protein" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.Protein" class="text-danger"></span>
	            </div>
	            <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.Carbs" class="form-label-add-edit">Carbohydrates:</label>
                    <input asp-for="@Model.Carbs" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.Carbs" class="text-danger"></span>
	            </div>
	            <div class="col-sm-6 mb-2">
                    <label asp-for="@Model.Fats" class="form-label-add-edit">Fats:</label>
                    <input asp-for="@Model.Fats" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.Fats" class="text-danger"></span>
	            </div>
            </div>

            <div class="mb-2">
                <input class="btn btn-warning btn-dark-text w-100 py-2 fw-bold rounded" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>