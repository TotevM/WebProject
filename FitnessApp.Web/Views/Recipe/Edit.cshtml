@using FitnessApp.ViewModels.RecipeModels
@model RecipeEditViewModel
@{
    ViewData["Title"] = "Edit Recipe";
}

<div id="add-recipe" class="container">
	<div class="row">
		<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
			<form asp-action="Edit" method="post" enctype="multipart/form-data" class="p-4 bg-dark-form shadow-custom rounded">
				<h2 class="mb-4">@ViewData["Title"]</h2>

				<div class="row">
					<div class="col-sm-6 mb-3">
						<label asp-for="@Model.RecipeName" class="form-label">Recipe Name</label>
						<input asp-for="@Model.RecipeName" class="form-control" aria-required="true" placeholder="Enter recipe name" />
						<span asp-validation-for="@Model.RecipeName" class="text-danger"></span>
					</div>

					<div class="col-sm-6 mb-3">
						<label asp-for="@Model.Goal" class="form-label">Select Category</label>
						<select asp-for="@Model.Goal" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.Goals))">
							<option value="">Select Category...</option>
						</select>
						<span asp-validation-for="@Model.Goal" class="text-danger"></span>
					</div>
				</div>

				<div class="mb-3">
					<label asp-for="@Model.Preparation" class="form-label">Preparation</label>
					<textarea asp-for="@Model.Preparation" class="form-control" aria-required="true" rows="3" placeholder="Describe preparation steps"></textarea>
					<span asp-validation-for="@Model.Preparation" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="@Model.Ingredients" class="form-label">Ingredients</label>
					<textarea asp-for="@Model.Ingredients" class="form-control" aria-required="true" rows="3" placeholder="List the ingredients"></textarea>
					<span asp-validation-for="@Model.Ingredients" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="@Model.ImageUrl" class="form-label">Image URL</label>
					<input asp-for="@Model.ImageUrl" class="form-control" aria-required="false" placeholder="Enter image URL (optional)" />
					<span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
				</div>

				<div class="row">
					<div class="col-sm-6 mb-3">
						<label asp-for="@Model.Calories" class="form-label">Calories</label>
						<input asp-for="@Model.Calories" class="form-control" aria-required="true" placeholder="Enter calorie count" />
						<span asp-validation-for="@Model.Calories" class="text-danger"></span>
					</div>

					<div class="col-sm-6 mb-3">
						<label asp-for="@Model.Protein" class="form-label">Protein</label>
						<input asp-for="@Model.Protein" class="form-control" aria-required="true" placeholder="Enter protein amount" />
						<span asp-validation-for="@Model.Protein" class="text-danger"></span>
					</div>

					<div class="col-sm-6 mb-3">
						<label asp-for="@Model.Carbohydrates" class="form-label">Carbohydrates</label>
						<input asp-for="@Model.Carbohydrates" class="form-control" aria-required="true" placeholder="Enter carbohydrates amount" />
						<span asp-validation-for="@Model.Carbohydrates" class="text-danger"></span>
					</div>

					<div class="col-sm-6 mb-3">
						<label asp-for="@Model.Fats" class="form-label">Fats</label>
						<input asp-for="@Model.Fats" class="form-control" aria-required="true" placeholder="Enter fats amount" />
						<span asp-validation-for="@Model.Fats" class="text-danger"></span>
					</div>
				</div>

				<div class="mt-4">
					<input class="btn btn-warning w-100 py-2 fw-bold rounded" type="submit" value="Save" />
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

@section Styles {
	<link rel="stylesheet" href="~/css/recipe.css" />
}
