@using System.Security.Claims
@using FitnessApp.ViewModels.RecipeModels
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<ExerciseIndexView>
@{
	ViewData["Title"] = "Restore exercise";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
	<h2>Inactive Exercises</h2>
	@if (User?.Identity?.IsAuthenticated == true)
	{
		<a asp-controller="Exercise" asp-action="Index" class="btn btn-primary"><i class="fas fa-plus"></i>Return to exercises</a>
	}
</div>
<hr />

<div class="row text-center">
	@foreach (var exercise in Model)
	{
		<div class="col-md-3 mb-4">
			<div class="card h-100" style="width: 100%;">
				@if (!string.IsNullOrEmpty(exercise.ImageUrl))
				{
					<img src="@exercise.ImageUrl" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="@exercise.Name">
				}
				else
				{
					<img src="~/images/NoPictureAvailable.png" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="No Image Available">
				}

				<div class="card-body d-flex flex-column">
					<h2 class="card-title">@exercise.Name</h2>
					<h6 class="card-title">Muscle Group: @exercise.MuscleGroup</h6>
					<h6 class="card-title">Difficulty: @exercise.Difficulty</h6>

					<div class="mt-auto d-flex justify-content-between gap-2">
						<form asp-controller="Exercise" asp-action="Restore" asp-route-id="@exercise.Id" method="post" class="flex-fill">
							<button type="submit" class="btn btn-danger w-100">Restore Exercise</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	}
</div>