@model AddExerciseViewModel
@{
    ViewData["Title"] = ViewData["Title"] ?? "Edit Exercise"; // Fallback to default title
}
<h2>@ViewData["Title"]</h2>
<form asp-action="Edit" method="post" class="form-horizontal">
    <input asp-for="Id" type="hidden" /> @* Add hidden field for ID *@
    <div class="form-group">
        <label asp-for="ExerciseName" class="control-label">Exercise Name</label>
        <input asp-for="ExerciseName" class="form-control" placeholder="Enter exercise name" />
        <span asp-validation-for="ExerciseName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Difficulty" class="control-label">Difficulty</label>
        <select asp-for="Difficulty" class="form-control">
            <option value="">Select Difficulty</option>
            @if (Model.Difficulties != null && Model.Difficulties.Any())
            {
                @foreach (var difficulty in Model.Difficulties)
                {
                    <option value="@difficulty">@difficulty</option>
                }
            }
            else
            {
                <option value="">No difficulties available</option>
            }
        </select>
        <span asp-validation-for="Difficulty" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MuscleGroup" class="control-label">Muscle Group</label>
        <select asp-for="MuscleGroup" class="form-control">
            <option value="">Select Muscle Group</option>
            @if (Model.MuscleGroups != null && Model.MuscleGroups.Any())
            {
                @foreach (var muscleGroup in Model.MuscleGroups)
                {
                    <option value="@muscleGroup">@muscleGroup</option>
                }
            }
            else
            {
                <option value="">No muscle groups available</option>
            }
        </select>
        <span asp-validation-for="MuscleGroup" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl" class="control-label">Image URL</label>
        <input asp-for="ImageUrl" class="form-control" placeholder="Enter the URL of an exercise image (optional)" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update Exercise</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}