@using FitnessApp.ViewModels
@model RecipeDetailsInDiet

<div class="container my-5">
	<h2 class="mb-4">@Model.Name</h2>

	<div class="row">
		<div class="col-md-6">
			@if (!string.IsNullOrEmpty(Model.ImageUrl))
			{
				<img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid mb-4" style="max-height: 400px; object-fit: cover;">
			}
			else
			{
				<img src="images/NoPictureAvailable.png" alt="@Model.Name" class="img-fluid mb-4" style="max-height: 400px; object-fit: cover;">
			}
		</div>

		<div class="col-md-6">
			<h4>Nutritional Information</h4>
			<p><strong>Calories:</strong> @Model.Calories</p>
			<p><strong>Protein:</strong> @Model.Protein g</p>
			<p><strong>Carbohydrates:</strong> @Model.Carbohydrates g</p>
			<p><strong>Fats:</strong> @Model.Fats g</p>
		</div>
	</div>

	<div class="row mt-4">
		<div class="col-12">
			<h4>Ingredients</h4>
			<p>@Model.Ingredients</p>
		</div>
	</div>

	<div class="row mt-4">
		<div class="col-12">
			<h4>Preparation</h4>
			<p>@Model.Preparation</p>
		</div>
	</div>

	<div class="row mt-4">
		<form action="@Url.Action("RemoveFromDiet", "Diet", new { dietId = Model.DietId, recipeId = Model.RecipeId })" method="post" class="d-inline">
			<button type="submit" class="btn btn-danger me-2">Remove</button>
		</form>
		<div class="col-12 text-end">
			<button onclick="window.history.back()" class="btn btn-secondary">Go Back</button>
		</div>
	</div>

</div>